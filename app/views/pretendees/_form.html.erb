<div class="services-section-2-ezra services-section-2 parallax">
	<div class="container col-md-12 text-center">
		<h1>Peeps you're creepin'</h1>
		<%= form_for [@user, Pretendee.new], as: :pretendee, html: {class: "newsletter-form"} do |f| %>
		<div class="row col-sm-4 col-sm-offset-4 input-group">
			<%= f.text_field :twitter, class: "form-control", placeholder: "add new creep - @twitter" %>
			<%= f.hidden_field :user_id, :value => @user.id %>
			<span class="input-group-btn"><%= f.submit "creep on", class: "add-padding-btn btn btn-theme-color btn-lg" %></span>
		</div>
		<% end %>
	</div>
</div>