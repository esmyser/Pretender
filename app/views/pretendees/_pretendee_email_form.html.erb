<% if @user.email && @report.inactive? %>
<%= render partial: 'reports/turn_on_pretendee_report_form', locals: {user: @user, pretendee: @pretendee, report: @report } %>

<% elsif @user.email && @report.active? %>
<%= render partial: 'reports/turn_off_pretendee_report_form', locals: {user: @user, pretendee: @pretendee, report: @report } %>

<% else %>
<%= render partial: 'users/user_email_pretendee_report_form', locals: {user: @user, pretendee: @pretendee, report: @report } %>
<% end %>   
