<% if @user.email && @pretendee.report == false %>
  <%= link_to 'Subscribe' %>
<% elsif @user.email && @pretendee.report == true %>
  <%= link_to 'Unsubscribe' %>
<% else %>
  <%= form_for(@user) do |f|%>
  <%= f.label :email %>
  <%= f.text_field :email %>

<!-- How to set pretendee.report to true???
 -->
  <%= f.submit "Sign up for emails!" %>
  <% end %>
<% end %>
