<% if @user.email && @pretendee.report == false %>
  <%= form_for [@user, @pretendee, @report], as: :report do |f| %>
    <%= f.hidden_field :frequency, :value => 7 %>
    <%= f.hidden_field :pretendee_id, :value => @pretendee.id %>
    <%= f.submit "Subscribe" %>
  <% end %>
<% elsif @user.email && @pretendee.report == true %>
  <%= link_to 'Unsubscribe' %>
<% else %>
  <%= form_for(@user) do |f|%>
  <%= f.label :email %>
  <%= f.text_field :email %>

<!-- How to set pretendee.report to true???
 -->
  <%= f.submit "Sign up for emails!" %>
  <% end %>
<% end %>

