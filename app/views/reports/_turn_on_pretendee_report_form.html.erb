<div class="services-section-2 parallax" id="signup-emails">
  <div class="container col-md-12 text-center">
    <div id ="email-form">

<h1>Receive email updates!</h1>
<p>Choose how often you'd like to receive an updated report on <%= @pretendee.name %></p>

<%= form_for [@user, @pretendee, @report], html: {class: "form-horizontal"} do |f| %>
  <%= f.select (:frequency), class: "selectpicker" do %>
    <optgroup label="Frequency">
    <% [['Every day', 1], ['Every three days', 3], ['Every week', 7]].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
  <% end %>
    
  <%= f.hidden_field :pretendee_id, :value => @pretendee.id %>
  <%= f.hidden_field :active, :value => true %>
  <span class="input-group-btn"><%= f.submit "Subscribe me!", class: "add-padding-btn btn btn-theme-color btn-lg"%></span>
<% end %>

 </div>
 </div>
</div>