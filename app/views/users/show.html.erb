<h1>Hi <%="#{@user.name}"%></h1>

<% if !@user.pretendees.empty? %>

	<h1>Your creeps</h1>
	<ul><% @user.pretendees.each do |pretendee| %>
		<li>
			<%= link_to "#{pretendee.name}", user_pretendee_path(@user, 	pretendee) %>
			<%= button_to "x", user_pretendee_path(@user, pretendee), method: :delete %>
		</li>
	<% end %>
	</ul>
<% end %>

<%= render 'pretendees/form' %>

<% if !@user.topics.empty? %>

	<h1>Your topics</h1>
	<ul><% @user.topics.each do |topic| %>
	<li>
		<%= link_to "#{topic.name}", user_topic_path(@user, topic) %>
		<%= button_to "x", user_topic_path(@user, topic), method: :delete %>
	</li>
	<% end %>
	</ul>
<% end %>

<%= render 'new_user_topic' %>
