<div id="topics">
  <% if @topics %>
    <% @topics.each do |topic|%>
      <div class="image-wrapper col-sm-3 nopadding">
        <div class="square-div">
          <img src="<%= topic.image %>" class="img-responsive square-img">
        </div>
        <div class="image-overlay"> 
          <p>
            <a href="<%= user_topic_path(@user, topic) %>"><%= topic.name %></a>
            <br><br>
            <%= link_to 'Delete', user_topic_path(@user, topic), method: :delete %>
          </p>
        </div><!-- ends overlay div -->
      </div><!-- ends topic image div -->
    <% end %><!-- ends topic loop -->
  <% end %><!-- end if statement --> 
</div>