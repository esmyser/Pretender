<% if @user.topics.present? %>
  <div class="container">
  	<h1>Your topics</h1>
  	<ul class="list-group">
      <% @user.topics.each do |topic| %>
        <li class="list-group-item col-md-4">
          <%= link_to "#{topic.name.capitalize}", user_topic_path(@user, topic) %>
          <%= button_to "Delete", user_topic_path(@user, topic), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>