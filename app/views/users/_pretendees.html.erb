<% if @user.pretendees.present? %>
<div class="container">
	<%= render 'pretendees/form' %>

	<h1>Your creeps</h1>
	<div class="row test">
		<div class="portfolio-box iso-call work-col-8">
			<% @user.pretendees.each do |pretendee|%>

			<% profile_img_url = "https://twitter.com/"+pretendee.twitter.gsub(' ', '')+"/profile_image?size=original" %>
			<div class="image-wrapper col-sm-3 nopadding">
				<img src="<%= profile_img_url %>" alt="" class="img-responsive">
				<div class="image-overlay"> 
					<a href="<%= user_pretendee_path(@user, pretendee) %>">
						<p>
							<%= pretendee.name %>
							<br><br>
							<%= link_to 'delete', user_pretendee_path(@user, pretendee), method: :delete %>
						</p>
					</a>
				</div>
			</div>
			<% end %>
			<!-- i'm ending the if statement which could close earlier divs, but i'm doing it to include the "new" form regardless of whether there are existing creeps.... i need to fix this -->
			<% end %>
		</div>
	</div>
</div>